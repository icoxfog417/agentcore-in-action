{
  "name": "default-agent",
  "description": "Workshop builder agent configuration",
  "mcpServers": {
    "aws-mcp": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-proxy-for-aws@latest",
        "https://aws-mcp.us-east-1.api.aws/mcp",
        "--metadata", "AWS_REGION=us-west-2"
      ],
      "env": {}
    },
    "bedrock-agentcore-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.amazon-bedrock-agentcore-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": []
    },
    "strands": {
      "command": "uvx",
      "args": ["strands-agents-mcp-server"]
    }
  },
  "tools": [
	"*"
  ],
  "allowedTools": [
    "read",
    "@strands/search_docs",
    "@strands/fetch_doc"
  ],
  "toolsSettings": {
    "execute_bash": {
      "alwaysAllow": [
        {
          "preset": "readOnly"
        }
      ]
    },
    "use_aws": {
      "alwaysAllow": [
        {
          "preset": "readOnly"
        }
      ]
    }
  },
  "resources": [
    "file://.kiro/steering/principle.md",
    "file://.kiro/steering/design.md"
  ]
}
